@model DiskBorrower
@{ 
    string title = ViewBag.Action + " Borrower";
    ViewBag.Title = title;
}

<h2>Configure Delete</h2>
<h3>@Model.Lname</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BorrowerId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Borrower" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>