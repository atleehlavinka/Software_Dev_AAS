@model List<Disk>
@{
    ViewBag.Title = "Disk Manager";
}

<h1>@ViewBag.Title</h1>

<a asp-controller="Disk" asp-action="Add">Add New Disk</a>
@if (TempData.Keys.Contains("message"))
{
    <h4 class="bg-info" text-center text-white p-2>
        @TempData["message"]
    </h4>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Disk ID</th>
            <th>Disk Name</th>
            <th>Disk Artist</th>
            <th>Release Date</th>
            <th>Status ID</th>
            <th>Disk Type ID</th>
            <th>Genre ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disk in Model)
        {
            <tr>
                <td>@disk.DiskId</td>
                <td>@disk.DiskName</td>
                <td>@disk.DiskArtist</td>
                <td>@disk.ReleaseDate.ToString("dd MMM yyyy")</td>
                <td>@disk.Status.Description</td>
                <td>@disk.Genre.Description</td>
                <td>@disk.DiskType.Description</td>
                <td>
                    <a asp-controller="Disk" asp-action="Edit" asp-route-id="@disk.DiskId">Edit</a>
                    <a asp-controller="Disk" asp-action="Delete" asp-route-id="@disk.DiskId">Delete</a>
                </td>

                @*<td>@disk.StatusId</td>
                    <td>@disk.DiskTypeId</td>
                    <td>@disk.GenreId</td>*@
            </tr>
        }
    </tbody>
</table>